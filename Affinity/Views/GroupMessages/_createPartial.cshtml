@model Affinity.Models.GroupMessage

<div class="row">
    <div class="col-sm-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="SendingUserProfileId" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input asp-for="SendingUserProfileName" class="form-control" value="@ViewBag.SendingUserProfileName" hidden />
            </div>
            <div class="form-group">
                <input asp-for="MessageContent" class="form-control" placeholder="Enter your message here..." maxlength="1500" required />
                <span asp-validation-for="MessageContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="GroupId" class="form-control" value="@ViewBag.GroupId" hidden />
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div style="text-align: center;">
                        <a class="btn btn-outline-primary w-100 btn-lg" role="button" asp-area="" asp-controller="Groups" asp-action="Details" asp-route-id="@ViewBag.GroupId"><i class="fa fa-users pr-2" aria-hidden="true"></i> Back to Group Details</a>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div style="text-align: center;">
                        <input type="submit" class="btn btn-outline-primary w-100 btn-lg" role="button" value="✓ Send Message">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
