@model IEnumerable<Affinity.Models.Interests>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InterestCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterestSubCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InterestCategory.InterestCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterestSubCategory.InterestSubCategoryName)
            </td>
            <td>
            <td>
                @Html.DisplayFor(modelItem => item.Profile.ProfileName)
            </td>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InterestId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InterestId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InterestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
