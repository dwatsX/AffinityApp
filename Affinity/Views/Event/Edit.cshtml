@model Affinity.Models.Event

@{
    ViewData["Title"] = "Edit";
}

<h1><i class="fa fa-user text-primary pr-2" aria-hidden="true"></i> Edit Event</h1>

<div>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EventId" />
        <input type="hidden" asp-for="GroupId" />
        <div class="card" style="margin-top: 10px;">
            <div style="font-weight: bold;">
                <div class="card-header">
                    <p>
                        <div class="form-group">
                            <label asp-for="EventName" class="control-label">Event Name:</label>
                            <input asp-for="EventName" class="form-control" />
                            <span asp-validation-for="EventName" class="text-danger"></span>
                        </div>
                    </p>
                    <p>
                        <div class="form-group">
                            <label asp-for="EventDescription"></label>
                            <input asp-for="EventDescription" class="form-control" tabindex="2" />
                            <span asp-validation-for="EventDescription" class="text-danger"></span>
                        </div>
                    </p>
                    <p>
                        <div class="form-group">
                            <label asp-for="EventDateTime"></label>
                            <input type="datetime-local" asp-for="EventDateTime" class="form-control" tabindex="2" />
                            <span asp-validation-for="EventDateTime" class="text-danger"></span>
                        </div>
                    </p>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-6">
                <div style="text-align: center;">
                    <a class="btn btn-outline-primary w-100 btn-lg" role="button" asp-area="" asp-controller="Event" asp-action="Index"><i class="fa fa-calendar-day pr-2" aria-hidden="true"></i> List Events</a>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group" style="text-align: center;">
                    <input type="submit" class="btn btn-outline-primary w-100 btn-lg" role="button" value="✓ Save">
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
