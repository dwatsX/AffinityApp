@model Affinity.ViewModels.GroupViewModel

@{
    ViewData["Title"] = "Details";
}

<h1><i class="fa fa-user text-primary pr-2" aria-hidden="true"></i> @Html.DisplayFor(model => model.GroupName)</h1>

<div>
    <hr />
    @if (Model.Images.Any())
    {
        // Images Carousel
        <div class="card affinity-shadow">
            <div id="profilePicCarousel" class="carousel carouselContainer" data-ride="carousel">
                <ol class="carousel-indicators">
                    @if (Model.Images.Count >= 2)
                    {
                        for (int i = 0; i < Model.Images.Count; i++)
                        {
                            <li data-target="#profilePicCarousel" data-slide-to="@(i + 1)" class="@(i == 0 ? "active" : "")"></li>
                        }
                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Images.Count; i += 1)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            @for (int j = i; j < i + 1 && j < Model.Images.Count; j++)
                            {
                                <img class="d-block w-100 carouselImage" src="@Model.Images[j].ImageURL">
                            }
                        </div>
                    }
                </div>
                @if (Model.Images.Count >= 2)
                {
                    <a class="carousel-control-prev" href="#profilePicCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#profilePicCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                }
            </div>
        </div>
    }
    @if (Model.Images.Count == 0)
    {
        <div class="card" style="text-align: center;">
            <br />
            <p>Upload or Edit Group Pictures! Click here:</p>
            <div class="form-group">
                <a class="btn btn-outline-primary w-25" role="button" asp-controller="Image" asp-action="Index" asp-route-profileId="@Model.GroupId">Images</a>
            </div>
        </div>
    }
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        <h3>Group Information</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-12" style="text-align: center;">
        <h3>Group Name</h3>
        <br />
        <div class="shadow p-3 mb-5 bg-body rounded">@Html.DisplayFor(model => model.GroupName)</div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12" style="text-align: center;>
        <h3> Group Description</h3>
        <br />
        <div class="shadow p-3 mb-5 bg-body rounded">@Html.DisplayFor(model => model.GroupDescription)</div>
    </div>
</div>
<hr />

<hr />
    <div class="row">
        <div class="col-sm-12">
            <h3>Interests</h3>
            <h3 class="profileInterests">
                @if (Model.Members.Any())
                {
                    @foreach (var i in Model.Members)
                    {
                        <span class="badge bg-primary">@i.ToString()</span>
                    }
                }
            </h3>
        </div>
    </div>
    <div>
<a asp-action="Index">Back to List</a>
</div>
