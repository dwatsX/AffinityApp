@model Affinity.Models.FriendMessage

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-sm-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="SendingUserId" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input asp-for="ReceivingUserId" class="form-control" value="99" hidden />
            </div>
            <div class="form-group">
                <input asp-for="MessageContent" class="form-control" placeholder="Enter your message here..." />
                <span asp-validation-for="MessageContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserRelationshipId" class="form-control" value="@ViewBag.UserRelationshipId" hidden />
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div style="text-align: center;">
                        <a class="btn btn-outline-primary w-100 btn-lg" role="button" asp-area="" asp-controller="Friends" asp-action="Index"><i class="fa fa-users pr-2" aria-hidden="true"></i> Friends List</a>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div style="text-align: center;">
                        <input type="submit" class="btn btn-outline-primary w-100 btn-lg" role="button" value="✓ Send Message">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

